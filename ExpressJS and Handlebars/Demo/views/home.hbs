<h1>Handlebars Demo</h1>
{{#if username}}
  <h3>Hello {{username}}!</h3>
{{else}}
  <h3>Guest user!</h3>
{{/if}}

{{#with product}}
  <div>
    <p>Name:{{name}}</p>
    <p>Price:{{price}}</p>
    <p>Color:{{color}}</p>
  </div>
{{/with}}

{{#if contacts}}
  <ul>
    {{#each contacts}}
     {{>userCard}}
    {{/each}}
  </ul>
{{else}}
  <p>No contacts yet !</p>
{{/if}}
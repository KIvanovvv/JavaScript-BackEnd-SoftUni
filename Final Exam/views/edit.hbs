{{#if error}}
  <div>
    <div class="errorContainer">
      <p>{{error}}</p>
    </div>
  </div>
{{/if}}

<div class="editPage">
  <h2>Edit photo</h2>
  <!-- Start Add Photo Form -->
  <form method="post">
    {{#with photo}}
      <p>
        <input type="text" name="name" placeholder="Name" value="{{name}}" />
      </p>

      <p>
        <input type="number" name="age" placeholder="Age" value="{{age}}" />
      </p>

      <p>
        <textarea
          type="text"
          name="description"
          placeholder="Description"
        >{{description}}</textarea>
      </p>

      <p>
        <input
          type="text"
          name="location"
          placeholder="Location"
          value="{{location}}"
        />
      </p>

      <p>
        <input
          type="text"
          name="imageUrl"
          placeholder="Link to image"
          value="{{imageUrl}}"
        />
      </p>
      <!-- Add Photo Button -->
      <button class="edit-btn" type="submit">Edit Photo</button>
    {{/with}}
  </form>
</div>
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form  method="post">
                  {{#with coin}}
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{price}}">
                    <label>Description:</label>
                    <textarea name="description"
                        id="description">{{description}}</textarea>
                    <label>Payment method:</label>
                    <select id="payment" name="paymentMethod">
                      
                        <option value="{{paymentMethod.value}}">{{paymentMethod.name}}</option>
                       {{/with}}
                        {{#each allMethodsFormated}}
                        <option value="{{value}}">{{name}}</option>
                        {{/each}}
                       
                      
                    </select>
                    <input type="submit" id="btn" value="EDIT"></input>
                    
                </form>
            </div>
        </section>
<section id="details-info">
  <h1>Details</h1>
  {{#with coin}}
    <div class="coin-image">
      <img src=".{{imageUrl}}" />
    </div>
    <div class="coin-info">
      <div class="coin-text">
        <h1 id="name">{{name}}</h1>
        <h3 id="payment">Payment method: {{paymentMethod}}</h3>
        <p id="price"><span>Price: ${{price}}</span></p>
        <p id="description">{{description}}</p>
      </div>
      {{/with}}
      <div class="product-btn">
        {{#if user}}
          <!--Only for registered user and author of the publication -->
        
          {{#if options.isOwner}}
            <div class="author">
              <a href="/edit/{{coin._id}}" class="btn-edit">Edit</a>
              <a href="/details/delete/{{coin._id}}" class="btn-delete">Delete</a>
            </div>
            {{else}}
            {{#if options.hasBought}}
            <p class="buy-message">You already bought these crypto coins.</p>
            {{else}}
              <a href="/details/buy/{{coin._id}}" class="btn-buy">Buy</a>
            {{/if}}
            {{/if}}
        {{/if}}
      </div>
    </div>
  
</section>